{% extends "commentable.jinja" %}

{% block content %}
    {% if mode == 'full' %}
        <a class="tldr" href="#source-link" title="Go down to the source link">GET SAUCE</a>
        {{ content.description.render() }}
        {% if content.link %}
            <div id="source-link">
                <span>This content originates from:</span>
                {{ content.link.render('inline') }}
            </div>
        {% else %}
            <div id="source-link">No associated link selected.</div>
        {% endif %}
    {% else %}
        <pre class="markdown">{{ content.description|truncate }}</pre>
    {% endif %}
{% endblock %}
